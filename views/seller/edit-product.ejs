<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<main>
    <div class="container" style="max-width: 800px;">
         <div class="card">
             <div class="card-glow"></div>
            <h1><i class="fas fa-edit"></i> Edit Produk: <%= product.name %></h1>
             <% if (locals.errorMessage) { %>
                <div class="alert alert-danger"><i class="fas fa-exclamation-triangle"></i> <%= errorMessage %></div>
            <% } %>
            <form action="/seller/products/edit/<%= product._id %>" method="POST">
                <%- include('_product-form', { product: product }) %>
                 <div class="d-flex justify-content-between mt-3">
                    <a href="/seller/dashboard" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Kembali ke Dashboard</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-sync-alt"></i> Perbarui Produk</button>
                </div>
            </form>
        </div>
    </div>
main>

<%- include('../partials/footer') %>