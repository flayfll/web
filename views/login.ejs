<%- include('partials/header') %>
<%- include('partials/navbar') %>

<style>
    .auth-container {
        max-width: 450px;
        margin: 3rem auto;
    }
    .auth-card {
        padding: 2rem 2.5rem;
    }
    .auth-card h1 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }
    .auth-card .btn {
        width: 100%;
    }
    .auth-switch {
        text-align: center;
        margin-top: 1.5rem;
        color: var(--text-medium);
    }
</style>

<main>
    <div class="container auth-container">
        <div class="card auth-card">
            <h1 class="text-center"><i class="fas fa-user-shield"></i> Login Akun</h1>
            <form action="/auth/login" method="POST">
                <div class="form-group">
                    <label for="email"><i class="fas fa-envelope"></i> Email:</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="wfc@wanzofc.xyz" required>
                </div>
                <div class="form-group">
                    <label for="password"><i class="fas fa-key"></i> Password:</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="********" required>
                </div>
                <button type="submit" class="btn btn-primary"><i class="fas fa-sign-in-alt"></i> Login Sekarang</button>
            </form>
            <div class="auth-switch">
                Belum punya akun? <a href="/auth/register">Registrasi di sini <i class="fas fa-user-plus"></i></a>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>