<%- include('partials/header') %>
<%- include('partials/navbar') %>

<style>
    .auth-container {
        max-width: 450px;
        margin: 3rem auto;
    }
    .auth-card {
        padding: 2rem 2.5rem;
    }
    .auth-card h1 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }
    .auth-card .btn {
        width: 100%;
    }
    .auth-switch {
        text-align: center;
        margin-top: 1.5rem;
        color: var(--text-medium);
    }
</style>

<main>
    <div class="container auth-container">
        <div class="card auth-card">
            <h1 class="text-center"><i class="fas fa-user-astronaut"></i> Buat Akun Baru</h1>
             <p class="text-center mb-2" style="color: var(--accent-purple-light);"><i class="fas fa-gift"></i> Daftar dan dapatkan poin bonus!</p>
            <form action="/auth/register" method="POST">
                <div class="form-group">
                    <label for="username"><i class="fas fa-at"></i> Username:</label>
                    <input type="text" name="username" id="username" class="form-control" placeholder="username_keren" required>
                </div>
                <div class="form-group">
                    <label for="email"><i class="fas fa-envelope"></i> Email:</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="wanz@wanzofc.xyz" required>
                </div>
                <div class="form-group">
                    <label for="password"><i class="fas fa-key"></i> Password:</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Minimal 6 karakter" required>
                </div>
                <button type="submit" class="btn btn-primary"><i class="fas fa-user-plus"></i> Registrasi & Klaim Poin</button>
            </form>
            <div class="auth-switch">
                Sudah punya akun? <a href="/auth/login">Login di sini <i class="fas fa-sign-in-alt"></i></a>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>